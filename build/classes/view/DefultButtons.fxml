                            </Pane>
                            <Pane prefHeight="20.0" prefWidth="200.0">
                                <children>
                                    <Label alignment="BOTTOM_LEFT" layoutX="4.0" layoutY="9.0" opacity="0.44" text="designed by RXNCOR" textAlignment="CENTER" wrapText="true">
                                        <font>
                                            <Font size="8.0" />
                                        </font>
                                    </Label>
